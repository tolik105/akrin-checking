# DeepL API Key for translations
DEEPL_API_KEY=your_deepl_api_key_here

# reCAPTCHA Keys
# Important: For development, use test keys or configure your reCAPTCHA to accept localhost:3000
# For production, ensure your domain is added to the reCAPTCHA admin console
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=your_recaptcha_site_key
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key

# Email Configuration (SMTP)
# For Gmail: enable 2FA and use App Password
# For other providers: use their SMTP settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@example.com
SMTP_PASS=your_app_password

# Email Recipients
SALES_EMAIL=support@akrin.jp

# SEranking API for SEO optimization
SERANKING_API_KEY=your_seranking_api_key_here

# OpenAI API for content generation (optional)
OPENAI_API_KEY=your_openai_api_key_here

# Database
DATABASE_URL="file:./dev.db"